#:import Gauge gauge
#:import Bar bar
#:import NoTransition kivy.uix.screenmanager.NoTransition

<Connected>:

<Widget>:
    font_size: '20sp'

<Tow>:
    _force_gauge: force_gauge
    _battery_bar: battery_bar
    _rpm_label: rpm_label
    _force_label: force_label
    _connected_color: connected_color
    name: 'tow'
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0,0,0,1
            Rectangle:
                pos: self.pos
                size: self.size
        RelativeLayout:
            size_hint: 1, .9
            Gauge:
                id: force_gauge
                size_hint: 1, 1
            Label:
                size_hint: .2, .2
                pos_hint: {'top': 1, 'right': 1}
                markup: True
                halign: 'right'
                font_name: 'fonts/DejaVuSans-Bold.ttf'
                id: rpm_label
                text: '[size=50]5000[/size]\n[font=Roboto]1/min[/font]'
            Label:
                size_hint: .2, .2
                pos_hint: {'top': 1, 'x': 0}
                markup: True
                font_name: 'fonts/DejaVuSans-Bold.ttf'
                text: '[size=50]32.3[/size]\n[font=Roboto]km/h[/font]'
        BoxLayout:
            size_hint: 1, .1
            Connected:
                id: connected_color
                size_hint: None, 1
                width: self.height
            Button:
                size_hint: .2, 1
                text: 'Batterie'
                on_release: app.root.current = 'battery'
            Bar:
                size_hint: .6, 1
                id: battery_bar
                background_color: [.29, .29, .29, 1]
                color: [0, 1, 0, 1]
            Label:
                size_hint: .1, 1
                id: force_label
                text: '0kg'

<ForceSelect>:
    name: 'forceselect'
    _max_force_select: max_force_select
    _force_select_display: force_select_display
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        canvas.before:
            Color:
                rgba: 0,0,0,1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Zugkraft Auswahl'
        Label:
            id: force_select_display
            text: '50 kg'
        BoxLayout:
            Slider:
                id: max_force_select
                size_hint: .8, None
                min: 60
                max: 100
                step: 5
                on_value: root.select_force(self.value)
            BoxLayout:
                orientation: 'vertical'
                size_hint: .2, None
                Label:
                    text: 'Biplace'
                Switch:
                    id: biplace
                    on_active: root.biplace(self.active)
        Button:
            text: 'Ok'
            on_release: app.root.current = 'tow'

<Service>:
    name: 'service'
    _motor_temperature: temperature_motor_label
    _controller_temperature: temperature_controller_label
    _charge_level: charge_level_label
    _min_voltage: min_voltage_label
    _min_cell_address: min_cell_address_label
    BoxLayout:
        orientation: 'vertical'
        spacing: 0
        canvas.before:
            Color:
                rgba: 0,0,0,1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            size_hint: 1, .18
            Label:
                text: 'Motor'
            Label:
                text: 'Temperatur'
            Label:
                id: temperature_motor_label
                text: '--C'
        BoxLayout:
            size_hint: 1, .18
            Label:
                text: 'Controller'
            Label:
                text: 'Temperatur'
            Label:
                id: temperature_controller_label
                text: '--C'
        BoxLayout:
            size_hint: 1, .54
            Label:
                size_hint: .33, 1
                text: 'Batterie'
            BoxLayout:
                size_hint: .67, 1
                orientation: 'vertical'
                BoxLayout:
                    Label:
                        text: 'Ladezustand'
                    Label:
                        id: charge_level_label
                        text: '--,-%'
                BoxLayout:
                    Label:
                        text: 'kleinste Spannung'
                    Label:
                        id: min_voltage_label
                        text: '-,--V'
                BoxLayout:
                    Label:
                        text: 'Zelle'
                    Label:
                        id: min_cell_address_label
                        text: '--'
        BoxLayout:
            size_hint: 1, .1
            spacing: 1
            Button:
                text: 'Schlepp'
                on_release: app.root.current = 'tow'
            Button:
                text: 'Batterie'
                on_release: app.root.current = 'battery'
            Button:
                text: 'Kalibrieren (FINGER WEG!)'
                on_release: app.root.current = 'calibrate'


<Calibrate>:
    name: 'calibrate'
    _fifty_label: fifty_label
    _sixty_label: sixty_label
    _seventy_label: seventy_label
    _eighty_label: eighty_label
    _ninety_label: ninety_label
    _hundret_label: hundret_label
    _onethirty_label: onethirty_label
    _force_measure_label: force_measure_label
    BoxLayout:
        spacing: 1
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0,0,0,1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            Label:
                text: '50kg'
            Label:
                text: '60kg'
            Label:
                text: '70kg'
            Label:
                text: '80kg'
            Label:
                text: '90kg'
            Label:
                text: '100kg'
            Label:
                text: '130kg'
        BoxLayout:
            Label:
                id: fifty_label
                markup: True
                text: '0'
            Label:
                id: sixty_label
                markup: True
                text: '0'
            Label:
                id: seventy_label
                markup: True
                text: '0'
            Label:
                id: eighty_label
                markup: True
                text: '0'
            Label:
                id: ninety_label
                markup: True
                text: '0'
            Label:
                id: hundret_label
                markup: True
                text: '0'
            Label:
                id: onethirty_label
                markup: True
                text: '0'
        BoxLayout:
            Label:
                text: 'Aktueller Messwert'
            Label:
                id: force_measure_label
                text: '0'
        BoxLayout:
            Button:
                text: '<'
                on_press: root.previous_label()
            Button:
                text: 'Übernehmen'
                on_press: root.take_over()
            Button:
                text: '>'
                on_press: root.next_label()
        Button:
            text: 'Zurück'
            on_release: app.root.current = 'service'

<Battery>:
    name: 'battery'
    _voltage: voltage
    _level: level
    BoxLayout:
        orientation: 'vertical'
        spacing: 0
        canvas.before:
            Color:
                rgba: 0,0,0,1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Batterie'
            size_hint: 1, .3
            font_size: '100sp'
        Label:
            id: voltage
            text: '-,--Volt'
            size_hint: 1, .3
            font_size: '100sp'
            color: [0,1,0,1]
        Label:
            id: level
            text: '--,-%'
            size_hint: 1, .3
            font_size: '100sp'
            color: [0,1,0,1]
        BoxLayout:
            size_hint: 1, .1
            spacing: 1
            Button:
                text: 'Schlepp'
                on_release: app.root.current = 'tow'
            Button:
                text: 'Service'
                on_release: app.root.current = 'service'
