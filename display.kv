#:kivy 1.0.9
#:import Gauge gauge

<Connected>:

<Widget>:
    font_size: dp(20)

<Display>:
    torque_gauge: torque_gauge
    torque_label: torque_label
    force_select_button: force_select_button
    max_force_select: max_force_select
    force_select_display: force_select_display
    connected_color: connected_color
    id: display
    border: 0
    page: 1
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        canvas.before:
            Color:
                rgba: 0,0,0,1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Zugkraft Auswahl'
        Label:
            id: force_select_display
            text: '60 kg'
        BoxLayout:
            orientation: 'horizontal'
            Slider:
                id: max_force_select
                size_hint: .8, None
                min: 60
                max: 100
                step: 5
                on_value: root.select_force(self.value)
            BoxLayout:
                orientation: 'vertical'
                size_hint: .2, None
                Label:
                    text: 'Biplace'
                Switch:
                    id: biplace
                    on_active: root.biplace(self.active)
        Button:
            text: 'Ok'
            on_press: display.page = 1

    # the last page is always displayed first on top. If the default page is another one, all above pages slide to the
    # right when the app starts.
    BoxLayout:
        spacing: 0
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0,0,0,1
            Rectangle:
                pos: self.pos
                size: self.size
        Gauge:
            id: torque_gauge
            size_hint: 1, .9
        BoxLayout:
            size_hint: 1, .1
            orientation: 'horizontal'
            Connected:
                id: connected_color
                size_hint: None, 1
                width: self.height
            Label:
                text: 'Zugkraft'
            Button:
                id: force_select_button
                text: '60 kg'
                on_press: display.page = 0
            Label:
                text: 'Aktuell'
            Label:
                id: torque_label
                text: '0 kg'
