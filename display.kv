#:import Gauge gauge
#:import NoTransition kivy.uix.screenmanager.NoTransition

<Connected>:

<Widget>:
    font_size: '20sp'

<Tow>:
    _force_gauge: force_gauge
    _force_label: force_label
    _connected_color: connected_color
    name: 'tow'
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0,0,0,1
            Rectangle:
                pos: self.pos
                size: self.size
        Gauge:
            id: force_gauge
            size_hint: 1, .9
        BoxLayout:
            size_hint: 1, .1
            Connected:
                id: connected_color
                size_hint: None, 1
                width: self.height
            Button:
                text: 'Kalibrieren'
                on_release: app.root.current = 'calibrate'
            Label:
                text: 'Aktuell'
            Label:
                id: force_label
                text: '0 kg'

<ForceSelect>:
    name: 'forceselect'
    _max_force_select: max_force_select
    _force_select_display: force_select_display
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        canvas.before:
            Color:
                rgba: 0,0,0,1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Zugkraft Auswahl'
        Label:
            id: force_select_display
            text: '50 kg'
        BoxLayout:
            Slider:
                id: max_force_select
                size_hint: .8, None
                min: 60
                max: 100
                step: 5
                on_value: root.select_force(self.value)
            BoxLayout:
                orientation: 'vertical'
                size_hint: .2, None
                Label:
                    text: 'Biplace'
                Switch:
                    id: biplace
                    on_active: root.biplace(self.active)
        Button:
            text: 'Ok'
            on_release: app.root.current = 'tow'

<Calibrate>:
    name: 'calibrate'
    _fifty_label: fifty_label
    _sixty_label: sixty_label
    _seventy_label: seventy_label
    _eighty_label: eighty_label
    _ninety_label: ninety_label
    _hundret_label: hundret_label
    _onethirty_label: onethirty_label
    _force_measure_label: force_measure_label
    BoxLayout:
        spacing: 1
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0,0,0,1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            Label:
                text: '50kg'
            Label:
                text: '60kg'
            Label:
                text: '70kg'
            Label:
                text: '80kg'
            Label:
                text: '90kg'
            Label:
                text: '100kg'
            Label:
                text: '130kg'
        BoxLayout:
            Label:
                id: fifty_label
                markup: True
                text: '0'
            Label:
                id: sixty_label
                markup: True
                text: '0'
            Label:
                id: seventy_label
                markup: True
                text: '0'
            Label:
                id: eighty_label
                markup: True
                text: '0'
            Label:
                id: ninety_label
                markup: True
                text: '0'
            Label:
                id: hundret_label
                markup: True
                text: '0'
            Label:
                id: onethirty_label
                markup: True
                text: '0'
        BoxLayout:
            Label:
                text: 'Aktueller Messwert'
            Label:
                id: force_measure_label
                text: '0'
        BoxLayout:
            Button:
                text: '<'
                on_press: root.previous_label()
            Button:
                text: 'Übernehmen'
                on_press: root.take_over()
            Button:
                text: '>'
                on_press: root.next_label()
        Button:
            text: 'Zurück'
            on_release: app.root.current = 'tow'

<Battery>:
    name: 'battery'
    BoxLayout:
        orientation: 'vertical'
        spacing: 0
        canvas.before:
            Color:
                rgba: 0,0,0,1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Batterie'
            size_hint: 1, .3
            font_size: '100sp'
        Label:
            text: '99,54 Volt'
            size_hint: 1, .3
            font_size: '100sp'
            color: [0,1,0,1]
        Label:
            text: 'sehr gut'
            size_hint: 1, .3
            font_size: '100sp'
            color: [0,1,0,1]
        Button:
            size_hint: 1, .1
            text: 'Service'
