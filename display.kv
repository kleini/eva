#:kivy 1.0.9
#:import Gauge gauge

<Connected>:

<Widget>:
    font_size: dp(20)

<Display>:
    _force_gauge: force_gauge
    force_label: force_label
    force_measure_label: force_measure_label
    max_force_select: max_force_select
    force_select_display: force_select_display
    connected_color: connected_color
    id: display
    border: 0
    page: 2
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        canvas.before:
            Color:
                rgba: 0,0,0,1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Zugkraft Auswahl'
        Label:
            id: force_select_display
            text: '60 kg'
        BoxLayout:
            Slider:
                id: max_force_select
                size_hint: .8, None
                min: 60
                max: 100
                step: 5
                on_value: root.select_force(self.value)
            BoxLayout:
                orientation: 'vertical'
                size_hint: .2, None
                Label:
                    text: 'Biplace'
                Switch:
                    id: biplace
                    on_active: root.biplace(self.active)
        Button:
            text: 'Ok'
            on_press: display.page = 1

    BoxLayout:
        canvas.before:
            Color:
                rgba: 0,0,0,1
            Rectangle:
                pos: self.pos
                size: self.size
        spacing: 1
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: '50kg'
            Label:
                text: '60kg'
            Label:
                text: '70kg'
            Label:
                text: '80kg'
            Label:
                text: '90kg'
            Label:
                text: '100kg'
            Label:
                text: '130kg'
        BoxLayout:
            Label:
                id: fifty_label
                text: '0'
            Label:
                id: sixty_label
                text: '0'
            Label:
                id: seventy_label
                text: '0'
            Label:
                id: eighty_label
                text: '0'
            Label:
                id: ninety_label
                text: '0'
            Label:
                id: hundret_label
                text: '0'
            Label:
                id: onethirty_label
                text: '0'
        BoxLayout:
            Label:
                text: 'Aktueller Messwert'
            Label:
                id: force_measure_label
                text: '0'
        BoxLayout:
            Button:
                text: '<'
            Button:
                text: 'Übernehmen'
            Button:
                text: '>'
        Button:
            text: 'Zurück'
            on_press: display.page = 2

    # the last page is always displayed first on top. If the default page is another one, all above pages slide to the
    # right when the app starts.
    BoxLayout:
        spacing: 0
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0,0,0,1
            Rectangle:
                pos: self.pos
                size: self.size
        Gauge:
            id: force_gauge
            size_hint: 1, .9
        BoxLayout:
            size_hint: 1, .1
            Connected:
                id: connected_color
                size_hint: None, 1
                width: self.height
            Button:
                text: 'Kalibrieren'
                on_press: display.page = 1
            Label:
                text: 'Aktuell'
            Label:
                id: force_label
                text: '0 kg'
