#:kivy 1.0.9
#:import Gauge gauge

<DisplayWidget>:
    slider: slider
    gauge: gauge
    FloatLayout:
        width: 800
        height: 480
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos
        Gauge:
            id: gauge
            pos: 0, 48
            size_hint: 1, .9
        Slider:
            id: slider
            pos: 0, 0
            size_hint: 1, .1
            on_value: gauge.value = self.value
